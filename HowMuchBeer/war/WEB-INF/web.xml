<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>How_Much_Beer</servlet-name>
		<servlet-class>com.howmuchbeer.main.How_Much_BeerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>How_Much_Beer</servlet-name>
		<url-pattern>/howmuchbeer</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>after</servlet-name>
        <servlet-class>com.howmuchbeer.main.AfterPartyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>after</servlet-name>
        <url-pattern>/after</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>add_reference</servlet-name>
        <servlet-class>com.howmuchbeer.main.AddReferenceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_reference</servlet-name>
        <url-pattern>/add_reference</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
    	<web-resource-collection>
           <web-resource-name>add-reference</web-resource-name>
           <url-pattern>/reference.jsp</url-pattern>
           <url-pattern>/add_reference</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <servlet>
        <servlet-name>mobile</servlet-name>
        <servlet-class>com.howmuchbeer.main.MobileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mobile</servlet-name>
        <url-pattern>/mobile</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>postcomment</servlet-name>
        <servlet-class>com.howmuchbeer.main.PostCaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>postcomment</servlet-name>
        <url-pattern>/postcomment</url-pattern>
    </servlet-mapping>
    
	<welcome-file-list>
		<welcome-file>howmuchbeer.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>
